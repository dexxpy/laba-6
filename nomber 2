#include <iostream>

using namespace std;


int main()
{
	setlocale(0, "");

	int height;

	cout << "Введите высоту: " << endl;
	cin >> height;

	if (height == 0) height = 1;

	for (int i = 0; i < height; i++)
	{
		for (int j = 0; j <= height - i; j++)
		{
			cout << " ";
		}

		for (int j = height - 2 * i; j <= height; j++)
		{
			cout << "*";
		}

		cout << endl;
	}

	cout << endl;

	for (int i = 1; i <= height; i++)
	{
		for (int j = 0; j <= height - i; j++)
		{
			cout << " ";
		}

		for (int j = 0; j <= i; j++)
		{
			cout << "*";
		}

		for (int j = 0; j <= height; j++)
		{
			cout << "*";
		}

		for (int j = 0; j <= i; j++)
		{
			cout << "*";
		}

		cout << endl;
	}
}
